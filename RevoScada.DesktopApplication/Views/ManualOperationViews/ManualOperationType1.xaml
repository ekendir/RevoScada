<UserControl
    x:Class="RevoScada.DesktopApplication.Views.ManualOperationViews.ManualOperationType1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converter="clr-namespace:RevoScada.DesktopApplication.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:itemViews="clr-namespace:RevoScada.DesktopApplication.Views.ItemViews"
    xmlns:local="clr-namespace:RevoScada.DesktopApplication.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    Background="{StaticResource MainWindowLight}"
    Loaded="UserControl_Loaded"
    Unloaded="UserControl_Unloaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converter:LookDirToWidth x:Key="LookDirToWidth" />
        <converter:DoubleToAbsoluteVisiblity x:Key="DoubleToAbsoluteVisiblity" />
        <converter:BoolToDouble x:Key="BoolToDouble" />
        <converter:DoubleToBool x:Key="DoubleToBool" />
        <!--#region 3D Section Port Button Container Animations-->
        <Storyboard x:Key="autoclaveCamAnim_Updated">
            <DoubleAnimation
                Storyboard.TargetProperty="(Viewbox.Opacity)"
                From="0"
                To="1"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="autoclaveCamAnim_Hide">
            <DoubleAnimation
                Storyboard.TargetProperty="(Viewbox.Opacity)"
                From="1"
                To="0"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="autoclaveCamAnim_Show">
            <DoubleAnimation
                Storyboard.TargetProperty="(Viewbox.Opacity)"
                From="0"
                To="1"
                Duration="0:0:0.2" />
        </Storyboard>
        <Storyboard x:Key="posChange">
            <DoubleAnimation
                Storyboard.TargetName="allowShowingSections"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:2" />
        </Storyboard>

        <Style BasedOn="{StaticResource turquoiseBtn}" TargetType="{x:Type Button}">
            <Setter Property="MinWidth" Value="36" />
            <Setter Property="Height" Value="18" />
            <Setter Property="FontSize" Value="11" />
        </Style>

        <Style x:Key="portTitleBdPtc" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="{StaticResource LightBlue}" />
            <Setter Property="MinWidth" Value="48" />
            <Setter Property="MinHeight" Value="36" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style x:Key="portTitleBdVac" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="{StaticResource LightYellow}" />
            <Setter Property="MinWidth" Value="48" />
            <Setter Property="MinHeight" Value="36" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style x:Key="portTitleBdMon" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="#E1E2E6" />
            <Setter Property="MinWidth" Value="48" />
            <Setter Property="MinHeight" Value="36" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <Style x:Key="portTitle" TargetType="{x:Type TextBlock}">
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{StaticResource CustomBlackColor}" />
            <Setter Property="FontSize" Value="15" />
        </Style>

        <Style
            x:Key="slowFlashingLocalTb"
            BasedOn="{StaticResource slowFlashingTb}"
            TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource GeneralWhite}" />
            <Setter Property="Margin" Value="10,2,8,0" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Width" Value="60" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

        <!--#region Port Lines Animations-->
        <Storyboard x:Key="portLinesAnim_Updated">
            <DoubleAnimation
                BeginTime="0:0:0.3"
                Storyboard.TargetProperty="(StackPanel.Opacity)"
                From="0"
                To="1" />
        </Storyboard>
        <Storyboard x:Key="portLinesAnim_Hide">
            <DoubleAnimation
                BeginTime="0:0:0.2"
                Storyboard.TargetProperty="(StackPanel.Opacity)"
                From="1"
                To="0" />
        </Storyboard>
        <!--#endregion-->
        <!--#endregion-->

        <Style BasedOn="{StaticResource centeredTextBox}" TargetType="{x:Type TextBox}">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="IsReadOnlyCaretVisible" Value="True" />
        </Style>

        <Style
            x:Key="editableTextBox"
            BasedOn="{StaticResource centeredTextBox}"
            TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="{StaticResource GeneralWhite}" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="IsReadOnly" Value="False" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>

        <Style BasedOn="{StaticResource generalRadioBtn}" TargetType="{x:Type RadioButton}" />
    </UserControl.Resources>
    <Grid
        x:Name="mainGrid"
        Focusable="True"
        Loaded="Grid_Loaded">

        <DockPanel Margin="10,10,0,10">
            <!--#region Left Section-->
            <Viewbox DockPanel.Dock="Left">
                <Border
                    Background="{StaticResource LightGrayColor}"
                    BorderBrush="{StaticResource CustomBlackColor}"
                    BorderThickness="1,0,1,1">
                    <Grid>
                        <StackPanel>
                            <!--  Temperature Control Header  -->
                            <Border
                                x:Name="tempBorder"
                                Focusable="True"
                                Style="{StaticResource standardHeaderBorder}">
                                <Viewbox Height="23">
                                    <Label
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="Temperature Control"
                                        FontSize="25"
                                        FontWeight="DemiBold"
                                        Foreground="{StaticResource CustomBlackColor}" />
                                </Viewbox>
                            </Border>
                            <Viewbox
                                Margin="0,3,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top">
                                <!--#region All Controls-->
                                <StackPanel
                                    HorizontalAlignment="Left"
                                    IsEnabled="{Binding Permissions[tempControl]}"
                                    Orientation="Horizontal">
                                    <StackPanel.Style>
                                        <Style TargetType="{x:Type StackPanel}">
                                            <Setter Property="ToolTipService.ShowOnDisabled" Value="True" />
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="ToolTip" Value="{Binding DisabledControlTooltipText}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <!--#region Fan Enable-->
                                    <GroupBox
                                        Margin="10,0,0,5"
                                        Header="Fan"
                                        Style="{StaticResource passiveBlackGroupBox_Smaller}">
                                        <StackPanel>
                                            <Border
                                                MinWidth="110"
                                                Margin="0,5,0,0"
                                                Padding="2,2,0,2"
                                                HorizontalAlignment="Left"
                                                Style="{StaticResource radioBtnBorder_NoThickness}">
                                                <StackPanel>
                                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                        <RadioButton
                                                            Margin="0,0,0,2"
                                                            HorizontalAlignment="Left"
                                                            Click="RbOn_Click"
                                                            Content="On"
                                                            IsChecked="{Binding FurnaceControlFormInput.PtcFanControlStateIsOn}"
                                                            Tag="{Binding ManualOperationTagConfigurations.PtcFanControlStateIsEnable}" />
                                                        <RadioButton
                                                            Margin="15,0,0,0"
                                                            Click="RbOff_Click"
                                                            Content="Off"
                                                            IsChecked="{Binding FurnaceControlFormInput.PtcFanControlStateIsOff}"
                                                            Tag="{Binding ManualOperationTagConfigurations.PtcFanControlStateIsEnable}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>

                                            <Border
                                                MinWidth="110"
                                                Padding="2,2,0,2"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Style="{StaticResource radioBtnBorder_NoThickness}">
                                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                    <RadioButton
                                                        Margin="0,0,0,2"
                                                        HorizontalAlignment="Left"
                                                        Click="RbMan_Click"
                                                        Content="Man"
                                                        IsChecked="{Binding FurnaceControlFormInput.PtcFanControlStateMan}"
                                                        Tag="{Binding ManualOperationTagConfigurations.PtcFanControlStateIsAuto}" />
                                                    <RadioButton
                                                        Margin="6,0,0,0"
                                                        Click="RbAuto_Click"
                                                        Content="Auto"
                                                        IsChecked="{Binding FurnaceControlFormInput.PtcFanControlStateAuto}"
                                                        Tag="{Binding ManualOperationTagConfigurations.PtcFanControlStateIsAuto}" />
                                                </StackPanel>
                                            </Border>

                                            <StackPanel
                                                Grid.Row="1"
                                                HorizontalAlignment="Left"
                                                Orientation="Horizontal">
                                                <TextBox
                                                    Grid.Column="1"
                                                    MinWidth="75"
                                                    Margin="0,5,0,0"
                                                    Text="{Binding FurnaceControlFormInput.PtcFanControlStatePid, StringFormat={}{0:F0}}" />
                                                <Label
                                                    Grid.Column="2"
                                                    Margin="2,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Content="%"
                                                    FontSize="13"
                                                    Style="{StaticResource boldedLabelTitle}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </GroupBox>
                                    <!--#endregion-->
                                    <!--#region Heat Enable-->
                                    <GroupBox
                                        Margin="10,0,0,5"
                                        Header="Heat"
                                        Style="{StaticResource passiveBlackGroupBox_Smaller}">
                                        <StackPanel>
                                            <Border
                                                MinWidth="110"
                                                Margin="0,5,0,0"
                                                Padding="2,2,0,2"
                                                HorizontalAlignment="Left"
                                                Style="{StaticResource radioBtnBorder_NoThickness}">
                                                <StackPanel>
                                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                        <RadioButton
                                                            Margin="0,0,0,2"
                                                            HorizontalAlignment="Left"
                                                            Click="RbOn_Click"
                                                            Content="On"
                                                            IsChecked="{Binding FurnaceControlFormInput.PtcHeatControlStateIsOn}"
                                                            Tag="{Binding ManualOperationTagConfigurations.PtcHeatControlStateIsEnable}" />
                                                        <RadioButton
                                                            Margin="15,0,0,0"
                                                            Click="RbOff_Click"
                                                            Content="Off"
                                                            IsChecked="{Binding FurnaceControlFormInput.PtcHeatControlStateIsOff}"
                                                            Tag="{Binding ManualOperationTagConfigurations.PtcHeatControlStateIsEnable}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>

                                            <Border
                                                MinWidth="110"
                                                Padding="2,2,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Style="{StaticResource radioBtnBorder_NoThickness}">
                                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                    <RadioButton
                                                        Margin="0,0,0,2"
                                                        HorizontalAlignment="Left"
                                                        Click="RbMan_Click"
                                                        Content="Man"
                                                        IsChecked="{Binding FurnaceControlFormInput.PtcHeatControlStateMan}"
                                                        Tag="{Binding ManualOperationTagConfigurations.PtcHeatControlStateIsAuto}" />
                                                    <RadioButton
                                                        Margin="6,0,0,0"
                                                        Click="RbAuto_Click"
                                                        Content="Auto"
                                                        IsChecked="{Binding FurnaceControlFormInput.PtcHeatControlStateAuto}"
                                                        Tag="{Binding ManualOperationTagConfigurations.PtcHeatControlStateIsAuto}" />
                                                </StackPanel>
                                            </Border>

                                            <StackPanel
                                                Grid.Row="1"
                                                Margin="0,5,0,0"
                                                HorizontalAlignment="Left"
                                                Orientation="Horizontal">
                                                <Label
                                                    Grid.Column="0"
                                                    Margin="0,0,5,0"
                                                    VerticalAlignment="Center"
                                                    Content="PID"
                                                    FontSize="13"
                                                    Style="{StaticResource boldedLabelTitle}" />
                                                <TextBox
                                                    Grid.Column="1"
                                                    MinWidth="75"
                                                    Text="{Binding FurnaceControlFormInput.PtcHeatControlStatePid}" />
                                                <Label
                                                    Grid.Column="2"
                                                    Margin="2,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Content="%"
                                                    FontSize="13"
                                                    Style="{StaticResource boldedLabelTitle}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </GroupBox>
                                    <!--#endregion-->
                                    <!--#region Cool Enable-->
                                    <GroupBox
                                        Margin="10,0,0,5"
                                        Header="Cool"
                                        Style="{StaticResource passiveBlackGroupBox_Smaller}">
                                        <StackPanel>
                                            <Border
                                                MinWidth="110"
                                                Margin="0,5,0,0"
                                                Padding="2,2,0,2"
                                                HorizontalAlignment="Left"
                                                Style="{StaticResource radioBtnBorder_NoThickness}">
                                                <StackPanel>
                                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                        <RadioButton
                                                            Margin="0,0,0,2"
                                                            HorizontalAlignment="Left"
                                                            Click="RbOn_Click"
                                                            Content="On"
                                                            IsChecked="{Binding FurnaceControlFormInput.PtcCoolControlStateIsOn}"
                                                            Tag="{Binding ManualOperationTagConfigurations.PtcCoolControlStateIsEnable}" />
                                                        <RadioButton
                                                            Margin="15,0,0,0"
                                                            Click="RbOff_Click"
                                                            Content="Off"
                                                            IsChecked="{Binding FurnaceControlFormInput.PtcCoolControlStateIsOff}"
                                                            Tag="{Binding ManualOperationTagConfigurations.PtcCoolControlStateIsEnable}" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>

                                            <Border
                                                MinWidth="110"
                                                Padding="2,2,0,2"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Style="{StaticResource radioBtnBorder_NoThickness}">
                                                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                    <RadioButton
                                                        Margin="0,0,0,2"
                                                        HorizontalAlignment="Left"
                                                        Click="RbMan_Click"
                                                        Content="Man"
                                                        IsChecked="{Binding FurnaceControlFormInput.PtcCoolControlStateMan}"
                                                        Tag="{Binding ManualOperationTagConfigurations.PtcCoolControlStateIsAuto}" />
                                                    <RadioButton
                                                        Margin="6,0,0,0"
                                                        Click="RbAuto_Click"
                                                        Content="Auto"
                                                        IsChecked="{Binding FurnaceControlFormInput.PtcCoolControlStateAuto}"
                                                        Tag="{Binding ManualOperationTagConfigurations.PtcCoolControlStateIsAuto}" />
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </GroupBox>
                                    <!--#endregion-->
                                    <!--#region Temperature Set Value Section-->
                                    <!--  Content  -->
                                    <GroupBox
                                        Margin="10,0,5,5"
                                        Padding="3"
                                        HorizontalAlignment="Left"
                                        Header="Temperature Set Value"
                                        Style="{StaticResource passiveBlackGroupBox_Smaller}">
                                        <StackPanel Orientation="Horizontal">
                                            <!--  Auto-Man Radio Buttons  -->
                                            <Viewbox MaxWidth="60" HorizontalAlignment="Left">
                                                <Border Style="{StaticResource radioBtnBorder}">
                                                    <StackPanel HorizontalAlignment="Center">
                                                        <RadioButton
                                                            Margin="0,0,0,4"
                                                            Click="RbAuto_Click"
                                                            Content="Auto"
                                                            IsChecked="{Binding FurnaceControlFormInput.PtcValueStateAuto}"
                                                            Tag="{Binding ManualOperationTagConfigurations.PtcValueIsAuto}" />
                                                        <RadioButton
                                                            Margin="0,0,0,2"
                                                            Click="RbMan_Click"
                                                            Content="Man"
                                                            IsChecked="{Binding FurnaceControlFormInput.PtcValueStateMan}"
                                                            Tag="{Binding ManualOperationTagConfigurations.PtcValueIsAuto}" />
                                                    </StackPanel>
                                                </Border>
                                            </Viewbox>
                                            <!--  Buttons  -->
                                            <StackPanel
                                                Grid.Column="1"
                                                Margin="10,0,0,0"
                                                VerticalAlignment="Center"
                                                Orientation="Horizontal">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button
                                                            Margin="2,0,0,2"
                                                            Click="IncreaseTen_Click"
                                                            Content="+10"
                                                            Tag="Temperature" />
                                                        <Button
                                                            Margin="2,0,0,2"
                                                            Click="IncreaseOne_Click"
                                                            Content="+1"
                                                            Tag="Temperature" />
                                                    </StackPanel>

                                                    <StackPanel Margin="0,2,0,0" Orientation="Horizontal">
                                                        <TextBox
                                                            x:Name="ptcSetValueTb"
                                                            Grid.Column="1"
                                                            MinWidth="65"
                                                            MinHeight="20"
                                                            Margin="2,0,0,2"
                                                            GotFocus="GeneralTextBox_GotFocus"
                                                            KeyDown="GeneralTextBox_KeyDown"
                                                            LostFocus="GeneralTextBox_LostFocus"
                                                            Style="{StaticResource whiteTextBoxVer2}"
                                                            Tag="{Binding ManualOperationTagConfigurations.PtcValue}"
                                                            Text="{Binding FurnaceControlFormInput.PtcValue, StringFormat={}{0:F2}}"
                                                            TextChanged="GeneralTextBox_TextChanged" />
                                                        <TextBlock
                                                            Margin="2,0,0,2"
                                                            HorizontalAlignment="Left"
                                                            VerticalAlignment="Center"
                                                            FontSize="11"
                                                            FontWeight="SemiBold"
                                                            Text="°C" />
                                                    </StackPanel>


                                                    <StackPanel Orientation="Horizontal">
                                                        <Button
                                                            Margin="2,0,0,2"
                                                            Click="DecreaseTen_Click"
                                                            Content="-10"
                                                            Tag="Temperature" />
                                                        <Button
                                                            Margin="2,0,0,2"
                                                            Click="DecreaseOne_Click"
                                                            Content="-1"
                                                            Tag="Temperature" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </GroupBox>
                                    <!--#endregion-->
                                    <!--  Temperature Watch Header  -->
                                </StackPanel>
                                <!--#endregion-->
                            </Viewbox>




                            <Border Style="{StaticResource standardHeaderBorder}">
                                <Viewbox Height="23">
                                    <Label
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="Temperature Watch"
                                        FontSize="25"
                                        FontWeight="DemiBold"
                                        Foreground="{StaticResource CustomBlackColor}" />
                                </Viewbox>
                            </Border>

                            <!--#region All Temperature Watches-->
                            <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                <!--  Air Temp  -->
                                <StackPanel Margin="10,0,0,0" VerticalAlignment="Top">
                                    <TextBlock
                                        Grid.Column="2"
                                        Margin="3,0,0,3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource CustomBlackColor}"
                                        Text="Air Temp" />
                                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                        <TextBox Text="{Binding FurnaceControlFormInput.AirTcLow, StringFormat={}{0:F2}}" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Text="{Binding FurnaceControlFormInput.AirTcLowRate, StringFormat={}{0:F2}}" />
                                        <TextBlock
                                            Width="{Binding ElementName=mmhgminText, Path=ActualWidth}"
                                            Margin="5,0,5,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Text="°C/min" />
                                    </StackPanel>
                                </StackPanel>

                                <!--  Low Part  -->
                                <StackPanel Margin="0,2,0,0" VerticalAlignment="Top">
                                    <TextBlock
                                        Margin="3,0,0,3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource CustomBlackColor}"
                                        Text="Low Part TC" />
                                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                        <TextBox Text="{Binding FurnaceControlFormInput.LowPtcPort, StringFormat=PTC - {0}}" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Text="Port" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                        <TextBox Text="{Binding FurnaceControlFormInput.LowPtcActual, StringFormat={}{0:F2}}" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Text="°C" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Text="{Binding FurnaceControlFormInput.LowPtcRate, StringFormat={}{0:F2}}" />
                                        <TextBlock
                                            Width="{Binding ElementName=mmhgminText, Path=ActualWidth}"
                                            Margin="5,0,5,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Text="°C/min." />
                                    </StackPanel>
                                </StackPanel>

                                <!--  High Part Tc  -->
                                <StackPanel Margin="10,2,0,0" VerticalAlignment="Top">
                                    <TextBlock
                                        Grid.Column="2"
                                        Margin="3,0,0,3"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Foreground="{StaticResource CustomBlackColor}"
                                        Text="High Part TC" />
                                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                        <TextBox Text="{Binding FurnaceControlFormInput.HighPtcPort, StringFormat=PTC - {0}}" />
                                        <TextBlock
                                            Grid.Column="2"
                                            Margin="5,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Text="Port" />
                                    </StackPanel>
                                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                                        <TextBox Text="{Binding FurnaceControlFormInput.HighPtcActual, StringFormat={}{0:F2}}" />
                                        <TextBlock
                                            Grid.Column="2"
                                            Margin="5,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Text="°C" />
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Text="{Binding FurnaceControlFormInput.HighPtcRate, StringFormat={}{0:F2}}" />
                                        <TextBlock
                                            Margin="5,0,15,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            FontSize="11"
                                            FontWeight="SemiBold"
                                            Text="°C/min." />
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                            <!--#endregion-->


                            <!--  Pressure Control Section  -->

                            <!--  Pressure Header  -->
                            <Border Style="{StaticResource standardHeaderBorder}">
                                <Viewbox Height="23">
                                    <Label
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Content="Pressure Control"
                                        FontSize="25"
                                        FontWeight="DemiBold"
                                        Foreground="{StaticResource CustomBlackColor}" />
                                </Viewbox>
                            </Border>
                            <StackPanel Margin="0,2,0,0">
                                <StackPanel IsEnabled="{Binding Permissions[pressureControl]}" Orientation="Horizontal">
                                    <StackPanel.Style>
                                        <Style TargetType="{x:Type StackPanel}">
                                            <Setter Property="ToolTipService.ShowOnDisabled" Value="True" />
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="ToolTip" Value="{Binding DisabledControlTooltipText}" />
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </StackPanel.Style>
                                    <!--#region Pressure-->
                                    <GroupBox
                                        Width="{Binding ElementName=vacuumGroupBox, Path=ActualWidth}"
                                        Margin="10,0,5,5"
                                        Header="Pressure"
                                        Style="{StaticResource passiveBlackGroupBox_Smaller}">
                                        <StackPanel>
                                            <Border
                                                MinWidth="110"
                                                Margin="0,5,0,0"
                                                Padding="2,2,0,2"
                                                HorizontalAlignment="Left"
                                                Style="{StaticResource radioBtnBorder_NoThickness}">
                                                <StackPanel>
                                                    <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                                        <RadioButton
                                                            Margin="0,0,0,2"
                                                            HorizontalAlignment="Left"
                                                            Click="RbOn_Click"
                                                            Content="On"
                                                            IsChecked="{Binding FurnaceControlFormInput.PressureControlStateIsOn}"
                                                            Tag="{Binding ManualOperationTagConfigurations.PressureValveControlStateOnOff}" />
                                                        <RadioButton
                                                            Margin="15,0,0,0"
                                                            Click="RbOff_Click"
                                                            Content="Off"
                                                            IsChecked="{Binding FurnaceControlFormInput.PressureControlStateIsOff}"
                                                            Tag="{Binding ManualOperationTagConfigurations.PressureValveControlStateOnOff}" />
                                                    </StackPanel>
                                                </StackPanel>
