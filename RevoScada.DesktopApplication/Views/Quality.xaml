                                                            Style="{StaticResource textBlockPhase}"
                                                            Text="Max" />
                                                        <TextBox
                                                            x:Name="PartTempRateMaxTb"
                                                            IsEnabled="{Binding ElementName=PartTempStyleCheckbox, Path=IsChecked}"
                                                            Loaded="generalNumbOnlyTb_Loaded"
                                                            LostFocus="generalNumbOnlyTb_LostFocus"
                                                            Style="{StaticResource textBoxPhase}"
                                                            Text="{Binding SelectedPhaseCard.PartTempRateMax, Mode=TwoWay}"
                                                            TextChanged="floatNumbTb_TextChanged" />
                                                    </StackPanel>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <StackPanel
                                                        Margin="10,0,0,0"
                                                        HorizontalAlignment="Center"
                                                        Orientation="Horizontal">
                                                        <TextBlock Style="{StaticResource textBlockPhase}" Text="Rate Calc Interval (Min)" />
                                                        <TextBox
                                                            x:Name="PartTempRateCalcIntervalTb"
                                                            Margin="17,0,0,0"
                                                            IsEnabled="{Binding ElementName=PartTempStyleCheckbox, Path=IsChecked}"
                                                            Loaded="generalNumbOnlyTb_Loaded"
                                                            LostFocus="generalNumbOnlyTb_LostFocus"
                                                            Style="{StaticResource textBoxPhase}"
                                                            Text="{Binding SelectedPhaseCard.PartTempRateCalcInterval, Mode=TwoWay}"
                                                            TextChanged="generalNumbOnlyTb_TextChanged" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>

                                            <StackPanel Margin="30,0,0,0">
                                                <TextBlock Style="{StaticResource textBlockPhase}" Text="Part Temperature Ranges (°C)" />
                                                <StackPanel Orientation="Horizontal">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock
                                                            Margin="0,0,5,10"
                                                            VerticalAlignment="Center"
                                                            Style="{StaticResource textBlockPhase}"
                                                            Text="Low" />
                                                        <TextBox
                                                            x:Name="PartTempLowRangeTb"
                                                            IsEnabled="{Binding ElementName=PartTempStyleCheckbox, Path=IsChecked}"
                                                            Loaded="generalNumbOnlyTb_Loaded"
                                                            LostFocus="generalNumbOnlyTb_LostFocus"
                                                            Style="{StaticResource textBoxPhase}"
                                                            Text="{Binding SelectedPhaseCard.PartTempLowRange, Mode=TwoWay}"
                                                            TextChanged="floatNumbTb_TextChanged" />
                                                    </StackPanel>
                                                    <StackPanel Margin="15,0,0,0" Orientation="Horizontal">
                                                        <TextBlock
                                                            Margin="0,0,5,10"
                                                            VerticalAlignment="Center"
                                                            Style="{StaticResource textBlockPhase}"
                                                            Text="High" />
                                                        <TextBox
                                                            x:Name="PartTempHighRangeTb"
                                                            IsEnabled="{Binding ElementName=PartTempStyleCheckbox, Path=IsChecked}"
                                                            Loaded="generalNumbOnlyTb_Loaded"
                                                            LostFocus="generalNumbOnlyTb_LostFocus"
                                                            Style="{StaticResource textBoxPhase}"
                                                            Text="{Binding SelectedPhaseCard.PartTempHighRange, Mode=TwoWay}"
                                                            TextChanged="floatNumbTb_TextChanged" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                    <!--#endregion-->
                                </Grid>
                            </Border>
                            <!--#endregion-->
                        </Grid>
                    </Grid>
                </Border>
            </StackPanel>
        </Viewbox>
        <!--#endregion-->
    </Grid>
</UserControl>