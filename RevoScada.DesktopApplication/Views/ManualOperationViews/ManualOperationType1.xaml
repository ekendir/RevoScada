                                    Header="Vacuum"
                                    Style="{StaticResource passiveBlackGroupBox}">
                                    <dxlc:LayoutGroup Margin="10,0,0,0" Orientation="Vertical">
                                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    FontWeight="SemiBold"
                                                    Foreground="{StaticResource CustomBlackColor}">
                                                    Vacuum Line Value
                                                </TextBlock>
                                                <TextBox Text="{Binding FurnaceControlFormInput.VacuumLineValue, StringFormat={}{0:F2}}" />
                                            </StackPanel>
                                            <StackPanel
                                                Margin="20,0,0,0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top">
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    FontWeight="SemiBold"
                                                    Foreground="{StaticResource CustomBlackColor}"
                                                    Text="Vacuum Out (PID)" />
                                                <TextBox Text="{Binding FurnaceControlFormInput.PidVacOut, StringFormat={}{0:F2}}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </dxlc:LayoutGroup>
                                </GroupBox>
                                <!--#endregion-->
                            </dxlc:FlowLayoutControl>
                            <!--#region PTC Ports-->
                            <dxlc:FlowLayoutControl Orientation="Horizontal">
                                <GroupBox
                                    Width="508"
                                    Padding="5"
                                    Header="PTC"
                                    Style="{StaticResource passiveBlackGroupBox}">
                                    <StackPanel Margin="10,5,0,10">
                                        <StackPanel.Resources>
                                            <Style BasedOn="{StaticResource GenToggleButton_Disabled}" TargetType="{x:Type ToggleButton}">
                                                <Setter Property="MinWidth" Value="45" />
                                                <Setter Property="MinHeight" Value="36" />
                                                <Setter Property="FontSize" Value="12" />
                                            </Style>
                                        </StackPanel.Resources>
