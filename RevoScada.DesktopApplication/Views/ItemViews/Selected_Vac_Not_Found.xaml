<UserControl
    x:Class="RevoScada.DesktopApplication.Views.ItemViews.Selected_Vac_Not_Found"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RevoScada.DesktopApplication.Views.ItemViews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    Background="Transparent"
    mc:Ignorable="d">
    <StackPanel Margin="0,0,0,50" HorizontalAlignment="Center">
        <TextBlock
            HorizontalAlignment="Center"
            FontSize="22"
            FontWeight="Bold"
            Foreground="{StaticResource MainBlueColor}"
            Text="Aktif Vakum Portu Yok" />
        <TextBlock
            Margin="0,5,0,0"
            FontSize="18"
            FontWeight="SemiBold"
            Foreground="{StaticResource MainBlueColor}"
            Opacity="0.8"
            Text="Görüntülenecek aktif vakum portları bulunamadı." />
    </StackPanel>
</UserControl>
