                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>
                            </dxlc:FlowLayoutControl>
                            <!--#endregion-->

                            <!--#region VAC Ports-->
                            <dxlc:FlowLayoutControl Orientation="Horizontal">
                                <GroupBox
                                    Width="508"
                                    Padding="5"
                                    Header="VAC"
                                    Style="{StaticResource passiveBlackGroupBox}">
                                    <StackPanel Margin="10,5,0,10">
                                        <StackPanel.Resources>
                                            <Style BasedOn="{StaticResource GenToggleButton_Disabled}" TargetType="{x:Type ToggleButton}">
                                                <Setter Property="MinWidth" Value="45" />
                                                <Setter Property="MinHeight" Value="36" />
                                                <Setter Property="FontSize" Value="12" />
                                            </Style>
                                        </StackPanel.Resources>
                                        <StackPanel Orientation="Horizontal">
