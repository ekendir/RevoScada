                                                <ToggleButton Content="7" IsChecked="{Binding PTCPorts[6].IsSelected}" />
                                                <ToggleButton Content="8" IsChecked="{Binding PTCPorts[7].IsSelected}" />
                                                <ToggleButton Content="9" IsChecked="{Binding PTCPorts[8].IsSelected}" />
                                                <ToggleButton Content="10" IsChecked="{Binding PTCPorts[9].IsSelected}" />
                                            </StackPanel>
                                        </StackPanel>
