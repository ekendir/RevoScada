                    x:Name="portsGrid"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="3"
                    Panel.ZIndex="3">
                    <!--
                        Opacity="{Binding ElementName=allowShowingSections, Path=IsChecked,
                        Converter={StaticResource BoolToDouble}}" Visibility="{Binding ElementName=autoclaveTopVb, Path=Opacity,
                        Converter={StaticResource DoubleToAbsoluteVisiblity}}"
