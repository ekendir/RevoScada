                                            <ToggleButton Content="8" IsChecked="{Binding MONPorts[7].IsSelected}" />
                                            <ToggleButton Content="9" IsChecked="{Binding MONPorts[8].IsSelected}" />
                                            <ToggleButton Content="10" IsChecked="{Binding MONPorts[9].IsSelected}" />

                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>
                            </dxlc:FlowLayoutControl>
                            <!--#endregion-->
                        </StackPanel>
                    </Border>
                </Grid>

                <!--#endregion-->
                <!--#region Top Side of Autoclave : PTC-MON-VAC Ports-->
