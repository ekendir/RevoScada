                    x:Name="allowShowingSections"
                    IsChecked="{Binding AllowShowingSections}"
                    Visibility="Hidden" />

                <!--#region Top Side of Autoclave : Port Values-->
                <Grid
                    x:Name="topSecGrid"
                    Grid.RowSpan="2"
                    Grid.ColumnSpan="3"
                    Panel.ZIndex="3">
                    <!--
                        Opacity="{Binding ElementName=allowShowingSections, Path=IsChecked,
                        Converter={StaticResource BoolToDouble}}" Visibility="{Binding ElementName=autoclaveTopVb, Path=Opacity,
                        Converter={StaticResource DoubleToAbsoluteVisiblity}}"
                    -->
                    <Grid.Resources>
                        <Style BasedOn="{StaticResource centeredTextBox}" TargetType="{x:Type TextBox}">
                            <Setter Property="FontSize" Value="12" />
                            <Setter Property="IsReadOnly" Value="True" />
                            <Setter Property="Focusable" Value="False" />
                            <Setter Property="IsReadOnlyCaretVisible" Value="False" />
                            <Setter Property="MaxWidth" Value="55" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                        </Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="Foreground" Value="{StaticResource MainBlueColor}" />
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="FontWeight" Value="SemiBold" />
                            <Setter Property="FontSize" Value="12" />
                        </Style>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.RowSpan="3"
                        Margin="5,0,5,0"
                        Padding="15"
                        Background="{StaticResource LightGrayColor}"
                        BorderBrush="{StaticResource CustomBlackColor}"
                        BorderThickness="1">
                        <StackPanel>
                            <dxlc:FlowLayoutControl Orientation="Horizontal">
                                <!--#region Fan Section-->




                                <GroupBox
                                    x:Name="fanGroupBox"
                                    MinHeight="{Binding ElementName=monLinesGroupBox, Path=ActualWidth}"
                                    Header="Fan"
                                    Style="{StaticResource passiveBlackGroupBox}">
                                    <dxlc:LayoutGroup Margin="10,0,0,0" Orientation="Vertical">
                                        <StackPanel HorizontalAlignment="Left">
                                            <StackPanel Orientation="Horizontal">
                                                <StackPanel Margin="0,0,0,0">
                                                    <TextBlock
                                                        Margin="0,0,0,5"
                                                        HorizontalAlignment="Left"
                                                        Foreground="{StaticResource CustomBlackColor}"
                                                        Text="Fan Speed" />
                                                    <TextBox Text="{Binding FurnaceControlFormInput.FanSpeed, StringFormat={}{0:F2}}" />
                                                </StackPanel>
                                                <StackPanel Margin="30,0,0,0">
                                                    <TextBlock
                                                        Margin="0,0,0,5"
                                                        HorizontalAlignment="Left"
                                                        Foreground="{StaticResource CustomBlackColor}"
                                                        Text="Fan RPM" />
                                                    <TextBox Text="{Binding FurnaceControlFormInput.FanRpm, StringFormat={}{0:F2}}" />
                                                </StackPanel>
                                            </StackPanel>
                                            <StackPanel Margin="0,7,0,10" Orientation="Horizontal">
                                                <StackPanel Margin="0,0,0,0">
                                                    <TextBlock
                                                        Margin="0,0,0,5"
                                                        HorizontalAlignment="Left"
                                                        Foreground="{StaticResource CustomBlackColor}"
                                                        Text="Fan Temp (°C)" />
                                                    <TextBox Text="{Binding FurnaceControlFormInput.FanTemperature, StringFormat={}{0:F2}}" />
                                                </StackPanel>
                                                <StackPanel Margin="25,0,0,0">
                                                    <TextBlock
                                                        Margin="0,0,0,5"
                                                        HorizontalAlignment="Left"
                                                        Foreground="{StaticResource CustomBlackColor}"
                                                        Text="Vibration (mm/sn)" />
                                                    <TextBox Text="{Binding FurnaceControlFormInput.FanVibration, StringFormat={}{0:F2}}" />
                                                </StackPanel>
                                            </StackPanel>
                                        </StackPanel>
                                    </dxlc:LayoutGroup>
                                </GroupBox>
                                <!--#endregion-->
                                <!--#region Pressure Section-->
                                <GroupBox
                                    x:Name="pressureGroupBox"
                                    MinHeight="{Binding ElementName=monLinesGroupBox, Path=ActualHeight}"
                                    Header="Door Status"
                                    Style="{StaticResource passiveBlackGroupBox}">
                                    <dxlc:LayoutGroup Margin="0,10,0,0" VerticalAlignment="Center">
                                        <StackPanel Margin="10,0,0,0" VerticalAlignment="Top">

                                            <TextBlock>
                                                <TextBlock.Style>
                                                    <Style BasedOn="{StaticResource slowFlashingLocalTb}" TargetType="{x:Type TextBlock}">
                                                        <Setter Property="Margin" Value="10,2,8,0" />
                                                        <Setter Property="FontWeight" Value="Bold" />
                                                        <Setter Property="VerticalAlignment" Value="Center" />
                                                        <Setter Property="HorizontalAlignment" Value="Left" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding FurnaceControlFormInput.DoorStatus}" Value="1">
                                                                <Setter Property="Foreground" Value="{StaticResource GeneralWhite}" />
                                                                <Setter Property="Text" Value="CLOSE" />
                                                                <Setter Property="Padding" Value="5,1,5,1" />
                                                                <Setter Property="Background" Value="{StaticResource TechnicalGreenColor}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding FurnaceControlFormInput.DoorStatus}" Value="0">
                                                                <Setter Property="Text" Value="OPEN" />
                                                                <Setter Property="Padding" Value="5,1,5,1" />
                                                                <Setter Property="Background" Value="{StaticResource Sensor_Red}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </StackPanel>
                                    </dxlc:LayoutGroup>
                                </GroupBox>
                                <!--#endregion-->

                            </dxlc:FlowLayoutControl>
                            <dxlc:FlowLayoutControl x:Name="tempVacFlowLayout" Orientation="Horizontal">
                                <!--#region Temperature Section-->
                                <GroupBox
                                    x:Name="tempGroupBox"
                                    Width="{Binding ElementName=fanGroupBox, Path=ActualWidth}"
                                    Height="{Binding ElementName=fanGroupBox, Path=ActualHeight}"
