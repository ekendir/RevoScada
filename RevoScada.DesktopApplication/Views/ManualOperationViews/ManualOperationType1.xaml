                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Left"
                                                    FontWeight="SemiBold"
                                                    Foreground="{StaticResource CustomBlackColor}"
                                                    Text="SRC LEFT-RIGHT (%)" />
                                                <TextBox Margin="-20,0,0,0" Text="{Binding FurnaceControlFormInput.PidHeatOut, StringFormat={}{0:F2}}" />
                                            </StackPanel>
                                            <StackPanel Margin="10,0,5,10">
                                                <TextBlock
                                                    Margin="0,0,0,5"
                                                    HorizontalAlignment="Left"
                                                    FontWeight="SemiBold"
                                                    Foreground="{StaticResource CustomBlackColor}"
                                                    Text="Cooling (%)" />
                                                <TextBox Text="{Binding FurnaceControlFormInput.PidCoolOut, StringFormat={}{0:F2}}" />
                                            </StackPanel>
                                        </StackPanel>
                                    </dxlc:LayoutGroup>
                                </GroupBox>
                                <!--#endregion-->
                                <!--#region Vacuum Section-->
                                <GroupBox
                                    x:Name="vacGroupBox"
                                    Width="{Binding ElementName=fanGroupBox, Path=ActualWidth}"
                                    Height="{Binding ElementName=fanGroupBox, Path=ActualHeight}"
